<link rel="stylesheet" href="../css/loginpage.css">
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <div class="container">
      <div class="forms-container">
      
        <div class="signin-signup">
          <form method="POST" action="/create-session" class="sign-in-form" data-aos-duration="1500" data-aos="zoom-in">
            <h2 class="title">Sign in</h2>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" placeholder="Email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required/>
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" placeholder="Password" class="form-control" id="password" name="password" required/>
            </div>
            <input type="submit" class="btn solid" />
          </form>
          <form method="POST" action="/create" class="sign-up-form">
            <h2 class="title">Sign up</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" placeholder="Username" class="form-control" id="username" name="username" required />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email"  placeholder="Email" class="form-control" id="email" aria-describedby="emailHelp" name="email"
              required />
            </div>
            

            
               <select class="form-select" id="role" name="role" style="max-width: 380px;
               width: 100%;
               background-color: #f0f0f0;
               margin: 10px 0;
               height: 55px;
               border-radius: 55px;
               display: grid;
               grid-template-columns: 15% 85%;
               padding: 0px 4.4rem;
               font-weight: 600;
               font-size: 1.1rem;
               position: relative;
               color: #aaa;" required >
               
               <option value="" disabled selected>Select your Option</option> 
                <option value="employee"> Employee</option>
                <option value="admin">Admin</option>
              </select>
            
            

            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" placeholder="Password" class="form-control" id="password" name="password" required />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" placeholder="Confirm Password" class="form-control" id="confirm_password" name="confirm_password" required />
            </div>
              
            <input type="submit" class="btn" value="Sign up" />
          </form>
        </div>
      
      </div>

      <div class="panels-container">
        <div class="panel left-panel" data-aos-duration="1500" data-aos="zoom-in">
          <div class="content">
            <h3>New here ?</h3>
            <p>
              Are you a new person & Don't have an account?
              Sign-Up Here!
            </p>
            <button  class="btn transparent" id="sign-up-btn">
              Sign up
            </button>
          </div>
          <img  src="../images/log.png" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <p>
              Already have an account? Sign-in Here!
            </p>
            <button  class="btn transparent" id="sign-in-btn">
              Sign in
            </button>
          </div>
          <img src="../images/register.png" class="image" alt="" />
        </div>
      </div>
    </div>
